{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile within the Emotion Explorer application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile, matches the auth UID."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "avatar": {
          "type": "string",
          "description": "The user's selected avatar (e.g., an emoji or URL)."
        },
        "avatarType": {
          "type": "string",
          "enum": ["emoji", "generated"]
        },
        "unlockedAnimalIds": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of IDs for unlocked spirit animals."
        }
      },
      "required": ["id", "name", "email", "avatar", "avatarType"]
    },
    "Emotion": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Emotion",
      "type": "object",
      "description": "Represents an emotion that a user can track in their diary. Stored in a subcollection under each user.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "icon": { "type": "string" },
        "color": { "type": "string" },
        "description": { "type": "string" },
        "isCustom": { "type": "boolean" }
      },
      "required": ["userId", "name", "icon", "color", "isCustom"]
    },
    "DiaryEntry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DiaryEntry",
      "type": "object",
      "description": "Represents a diary entry, recording a user's emotion and experience on a specific date.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "emotionId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "text": { "type": "string" }
      },
      "required": ["userId", "emotionId", "date", "text"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/UserProfile" },
          "description": "Stores user profiles. Path-based ownership."
        },
        "subcollections": [
          {
            "path": "/emotions/{emotionId}",
            "definition": {
              "schema": { "$ref": "#/entities/Emotion" },
              "description": "Stores user-specific emotions."
            }
          },
          {
            "path": "/diaryEntries/{diaryEntryId}",
            "definition": {
              "schema": { "$ref": "#/entities/DiaryEntry" },
              "description": "Stores diary entries for each user."
            }
          }
        ]
      }
    ]
  }
}
