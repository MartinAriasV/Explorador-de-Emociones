/**
 * @fileoverview Firestore Security Rules for Emotion Explorer.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Users can only access their own data.
 * The data is structured with user-specific subcollections to facilitate this.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by an authenticated user.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId The user ID to compare with the request's authentication UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Validates the incoming UserProfile data.
     * @param {map} data The resource data from the request.
     * @param {string} userId The user's ID.
     * @return {boolean} True if the data is valid, false otherwise.
     */
    function isValidUserProfile(data, userId) {
        return data.id == userId &&
               data.name is string && data.name.size() > 0 &&
               data.email is string && data.email.size() > 0 &&
               data.avatar is string && data.avatar.size() > 0 &&
               data.avatarType is string && (data.avatarType == 'emoji' || data.avatarType == 'generated');
    }

    /**
     * @description Rule for the users collection.
     * @path /users
     */
    match /users/{userId} {
      // Disallow listing all users for security.
      allow list: if false;

      // Allow a user to read or delete their own profile.
      allow get, delete: if isOwner(userId);

      // Allow a user to create their own profile document if it doesn't exist yet
      // and the data is valid.
      allow create: if isOwner(userId) && isValidUserProfile(request.resource.data, userId);

      // Allow a user to update their own profile if the data is valid.
      allow update: if isOwner(userId) && isValidUserProfile(request.resource.data, userId);

      /**
       * @description Rule for user-specific emotions.
       * @path /users/{userId}/emotions/{emotionId}
       * @allow (read, write) Allow users to manage their own emotions.
       */
      match /emotions/{emotionId} {
        allow read, write: if isOwner(userId);
      }

      /**
       * @description Rule for user-specific diary entries.
       * @path /users/{userId}/diaryEntries/{diaryEntryId}
       * @allow (read, write) Allow users to manage their own diary entries.
       */
      match /diaryEntries/{diaryEntryId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
