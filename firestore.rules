/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model, ensuring that users can only access their own data.
 *
 * Data Structure:
 * - /userProfiles/{userId}: Stores user profile data.
 * - /users/{userId}/emotions/{emotionId}: Stores user-defined emotions.
 * - /users/{userId}/diaryEntries/{diaryEntryId}: Stores diary entries.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own profiles and associated data.
 * - Listing all users or diary entries across users is disallowed.
 * - Data consistency is enforced by matching the 'userId' in the path with the 'userId' field in the document.
 *
 * Denormalization for Authorization:
 * - The `DiaryEntry` includes the `userId`, denormalizing the user relationship to enforce authorization independence.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents. Only the user with the matching UID can read or write their profile.
     * @path /userProfiles/{userId}
     * @allow (create) User 'user_abc' can create their profile if request.auth.uid == 'user_abc' and request.resource.data.id == 'user_abc'.
     * @allow (get) User 'user_abc' can read their profile if request.auth.uid == 'user_abc'.
     * @allow (update) User 'user_abc' can update their profile if request.auth.uid == 'user_abc' and resource.data.id == 'user_abc'.
     * @allow (delete) User 'user_abc' can delete their profile if request.auth.uid == 'user_abc'.
     * @deny (create) User 'user_xyz' cannot create profile for 'user_abc' (mismatched UID).
     * @deny (get) User 'user_xyz' cannot read profile of 'user_abc' (mismatched UID).
     * @deny (update) User 'user_xyz' cannot update profile of 'user_abc' (mismatched UID).
     * @deny (delete) User 'user_xyz' cannot delete profile of 'user_abc' (mismatched UID).
     * @principle Enforces document ownership for all operations.
     */
    match /userProfiles/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to user-defined emotions. Only the user with the matching UID can manage their emotions.
     * @path /users/{userId}/emotions/{emotionId}
     * @allow (create) User 'user_abc' can create an emotion if request.auth.uid == 'user_abc'.
     * @allow (get) User 'user_abc' can read an emotion if request.auth.uid == 'user_abc'.
     * @allow (update) User 'user_abc' can update an emotion if request.auth.uid == 'user_abc'.
     * @allow (delete) User 'user_abc' can delete an emotion if request.auth.uid == 'user_abc'.
     * @deny (create) User 'user_xyz' cannot create an emotion for 'user_abc' (mismatched UID).
     * @deny (get) User 'user_xyz' cannot read an emotion of 'user_abc' (mismatched UID).
     * @deny (update) User 'user_xyz' cannot update an emotion of 'user_abc' (mismatched UID).
     * @deny (delete) User 'user_xyz' cannot delete an emotion of 'user_abc' (mismatched UID).
     * @principle Restricts access to a user's own emotions data.
     */
    match /users/{userId}/emotions/{emotionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to user diary entries. Only the user with the matching UID can manage their own diary entries.
     * @path /users/{userId}/diaryEntries/{diaryEntryId}
     * @allow (create) User 'user_abc' can create a diary entry if request.auth.uid == 'user_abc' and request.resource.data.userId == 'user_abc'.
     * @allow (get) User 'user_abc' can read their diary entry if request.auth.uid == 'user_abc'.
     * @allow (update) User 'user_abc' can update their diary entry if request.auth.uid == 'user_abc' and resource.data.userId == 'user_abc'.
     * @allow (delete) User 'user_abc' can delete their diary entry if request.auth.uid == 'user_abc'.
     * @deny (create) User 'user_xyz' cannot create diary entry for 'user_abc' (mismatched UID).
     * @deny (get) User 'user_xyz' cannot read a diary entry of 'user_abc' (mismatched UID).
     * @deny (update) User 'user_xyz' cannot update a diary entry of 'user_abc' (mismatched UID).
     * @deny (delete) User 'user_xyz' cannot delete a diary entry of 'user_abc' (mismatched UID).
     * @principle Enforces document ownership for diary entries and validates relational integrity.
     */
    match /users/{userId}/diaryEntries/{diaryEntryId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}